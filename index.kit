    <script type="text/javascript">

      $(document).ready(function() {

        $('.tabs-content .content').hide();
        $('.tabs-content .content.active').show();

        $('.tabs li a').click(function(e){
          $('.tabs li a').removeClass("active");
          $(this).addClass("active");
          var tab = $(this).attr('href');
          $('.tabs-content .content').hide();
          $('.tabs-content '+ tab).fadeIn('slow');
          e.preventDefault();
        });

        $('.bt-menu').on('click', function(e) {
          e.preventDefault();
          $('body').toggleClass('menu-open');
        });

      });

      $(function() {

        //=================================
        // ANIMACOES SCROLL
        //=================================
        var controller = new ScrollMagic.Controller();

        // Animacao celular
        var celular = new gsap.to('.celular', {
            y: -100,
            ease: Linear.easeNone
        });
        var containerScene = new ScrollMagic.Scene({
            triggerElement: '.numeros',
            triggerHook: 0.4,
            duration: 500,
        })
        .setTween(celular) // binds o tween com a scene
        .addIndicators() // debug pra remover depois
        .addTo(controller); // assign the scene to the controller

        // Animacao detalhes
        $("section").each(function() {
          var tl = new TimelineMax();
          var parent = $(this).find(".detalhesBg");
          tl.from(parent, { y: -100, ease: Linear.easeNone });

          var scene = new ScrollMagic.Scene({
            triggerElement: this,
            triggerHook: .4,
            duration: 500
          })
          .setTween(tl)
          .addIndicators()
          .addTo(controller);
        });

        // Animacao titulos
        $("section").each(function() {
          var tl = new TimelineMax();
          var parent = $(this).find("h2");
          tl.from(parent, { y: 100, autoAlpha:.4, ease:Back.easeIn });

          var scene = new ScrollMagic.Scene({
            triggerElement: this,
            triggerHook: 50,
            duration: 500
          })
          .setTween(tl)
          .addIndicators()
          .addTo(controller);
        });

        $(".marcas a").each(function() {
          var tl1 = new TimelineMax();
          var parent = $(this);
          tl1.from(parent, { y: 100, opacity: 0, duration: 1, stagger: 40, ease: Linear.easeNone });

          var scene = new ScrollMagic.Scene({
            triggerElement: this,
            triggerHook: 1,
            duration: 500
          })
          .setTween(tl1)
          .addIndicators()
          .addTo(controller);
        });

        // // Animacao celular
        // var backgroundServicos = new gsap.to('.solucoes .programas, .solucoes .venture', {
        //     y: -100,
        //     ease: Linear.easeNone
        // });
