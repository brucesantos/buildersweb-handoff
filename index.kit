        //     triggerElement: '#solucoes',
        //     triggerHook: 0.4,
        //     duration: 500,
        // })
        // .setTween(backgroundServicos) // binds o tween com a scene
        // .addIndicators() // debug pra remover depois
        // .addTo(controller); // assign the scene to the controller


      });
